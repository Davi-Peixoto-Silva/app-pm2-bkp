<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Permissões de Acesso</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h3 class="mb-4">Usuários Permitidos</h3>

    <form method="POST" action="/permissao/adicionar" class="d-flex mb-3">
      <input type="text" name="usuario" class="form-control me-2" placeholder="Usuário (login ou e-mail)" required>
      <button type="submit" class="btn btn-primary">Adicionar</button>
    </form>

    <ul class="list-group">
      <% usuarios.forEach(user => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= user %>
          <form method="POST" action="/permissao/remover" class="m-0">
            <input type="hidden" name="usuario" value="<%= user %>">
            <button type="submit" class="btn btn-danger btn-sm">Remover</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
