<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard Produção</title>
  <link rel="icon" href="https://santelisa.com.br/wp-content/themes/2024_santelisa/assets/ico/favicon-32x32.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css">
  <style>
    .kpi-card {
      background: #ffffff;
      border: 1px solid #dee2e6;
      border-radius: 0.75rem;
      padding: 1rem;
      transition: all 0.2s ease-in-out;
    }
    .kpi-card:hover {
      transform: scale(1.01);
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.08);
    }
    .kpi-card h6 {
      margin-bottom: 1rem;
    }
    .kpi-card .row > .col {
      background: #f8f9fa;
      border-radius: 0.5rem;
      padding: 0.75rem;
      text-align: center;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
    }
    #tabelaProducao {
      font-size: 0.9rem;
    }
    .dataTables_wrapper .dt-buttons .btn {
      margin-right: 0.5rem;
    }
    .table-striped > tbody > tr:nth-of-type(odd) {
      background-color: #f9f9f9;
    }
    th {
      white-space: nowrap;
    }
  </style>
</head>
<body class="container py-4">

  <!-- Cabeçalho -->
  <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
    <div class="d-flex align-items-center gap-2">
      <i class="bi bi-gear-fill fs-3 text-success"></i>
      <h5 class="m-0 fw-bold">Dashboard Produção <small class="text-muted fs-6">(<%= titulo %>)</small></h5>
    </div>
    <a href="javascript:history.back()" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Voltar
    </a>
  </div>

  <% const safe = val => typeof val === 'number' ? val : 0; %>

  <!-- KPIs por Máquina -->
  <div class="mb-5">
    <% dadosProducao.forEach(maquina => { %>
      <div class="kpi-card mb-4">
        <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap gap-2">
          <h6 class="fw-bold text-primary mb-0">
            <i class="bi bi-hdd-network"></i> <%= maquina.Maquina %>
          </h6>
          <span class="badge bg-info text-dark">
            Prod: <%= (safe(maquina.ComparativoProducao) * 100).toFixed(1).replace('.', ',') %>%
          </span>
          <span class="badge bg-warning text-dark">
            Paradas: <%= (safe(maquina.ComparativoParadas) * 100).toFixed(1).replace('.', ',') %>%
          </span>
        </div>
        <div class="row row-cols-2 row-cols-md-3 row-cols-xl-6 g-3">
          <div class="col">
            <div class="text-muted small">Produção (ton)</div>
            <div class="fs-6 fw-bold">
              <%= safe(maquina.TotalProducao).toLocaleString('pt-BR', { minimumFractionDigits: 1 }) %>
            </div>
          </div>
          <div class="col">
            <div class="text-muted small">Horas Trabalhadas</div>
            <div class="fs-6 fw-bold">
              <%= safe(maquina.TotalHoras).toLocaleString('pt-BR', { minimumFractionDigits: 1 }) %>
            </div>
          </div>
          <div class="col">
            <div class="text-muted small">Horas Paradas</div>
            <div class="fs-6 fw-bold">
              <%= safe(maquina.TotalParadas).toLocaleString('pt-BR', { minimumFractionDigits: 1 }) %>
            </div>
          </div>
          <div class="col">
            <div class="text-muted small">Dias</div>
            <div class="fs-6 fw-bold">
              <%= safe(maquina.DiasTrabalhados) %>
            </div>
          </div>
          <div class="col">
            <div class="text-muted small">Produtividade (ton/h)</div>
            <div class="fs-6 fw-bold">
              <%= safe(maquina.TotalHoras) > 0 ? (maquina.TotalProducao / maquina.TotalHoras).toFixed(2).replace('.', ',') : '0,00' %>
            </div>
          </div>
          <div class="col">
            <div class="text-muted small">% Paradas</div>
            <div class="fs-6 fw-bold">
              <%= safe(maquina.TotalHoras) > 0 ? ((maquina.TotalParadas / maquina.TotalHoras) * 100).toFixed(2).replace('.', ',') + '%' : '0,00%' %>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  <!-- Tabela Detalhada -->
  <table id="tabelaProducao" class="table table-striped table-bordered w-100">
    <thead class="table-light">
      <tr>
        <% colunas.forEach(col => { %>
          <th><%= col %></th>
        <% }) %>
      </tr>
    </thead>
    <tbody>
      <% dadosProducao.forEach(row => { %>
        <tr>
          <% colunas.forEach(col => { %>
            <td><%= row[col] != null ? row[col] : '' %></td>
          <% }) %>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <footer class="text-center mt-5 text-muted small">
    &copy; <%= new Date().getFullYear() %> Sistema Integrado Santelisa
  </footer>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

  <script>
    $(document).ready(function () {
      $('#tabelaProducao').DataTable({
        pageLength: 25,
        responsive: true,
        dom: 'Bfrtip',
        buttons: [
          { extend: 'copy', text: 'Copiar' },
          { extend: 'excel', text: 'Excel' },
          { extend: 'csv', text: 'CSV' },
          { extend: 'print', text: 'Imprimir' }
        ],
        language: {
          url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
        }
      });
    });
  </script>
</body>
</html>
